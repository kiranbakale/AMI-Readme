postgresql['sql_replication_password'] = "{{ geo_sql_replication_password_md5 }}"
{% if geo_multi_node %}
patroni['replication_slots'] = {
    'geo_secondary' => { 'type' => 'physical' }
}
patroni['postgresql']['max_replication_slots'] = {{ geo_max_replication_slots }}
