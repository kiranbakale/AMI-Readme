roles ['consul_role']

gitlab_rails['auto_migrate'] = false

consul['enable'] = true
consul['configuration'] = {
  server: true,
  retry_join: %w({{ consul_int_ips | join(' ') }}),
  bind_addr: '{{ ansible_default_ipv4.address }}'
}
consul['monitoring_service_discovery'] =  true
node_exporter['listen_address'] = '0.0.0.0:9100'

{% if (groups | select('match', '^redis_sentinel.*') | list | count == 0) %}
# Redis Sentinel
sentinel['enable'] = true
sentinel['bind'] = '0.0.0.0'
sentinel['quorum'] = 2

redis['master_name'] = 'gitlab-redis'
redis['master_ip'] = '{{ redis_primary_int_ip }}'
redis['master_password'] = '{{ redis_password }}'
redis['port'] = {{ redis_port }}
{% endif %}

# Workaround for Sidekiq Cluster which is enabling by default
sidekiq['enable'] = false