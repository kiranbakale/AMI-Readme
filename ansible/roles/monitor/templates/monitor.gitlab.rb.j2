external_url '{{ external_url }}'

# Enable Prometheus
prometheus['enable'] = true
prometheus['listen_address'] = '0.0.0.0:9090'
prometheus['monitor_kubernetes'] = false

prometheus['scrape_configs'] = [
  {
    'job_name': 'non_omnibus_node',
    'static_configs' => [
      'targets' => ["{{ haproxy_ip }}:9100", "{{ gitlab_nfs_ip }}:9100"],
    ],
  },
  {
    'job_name': 'haproxy',
    'static_configs' => [
      'targets' => ["{{ haproxy_ip }}:1936"],
    ],
  },
]

# Enable Grafana
grafana['enable'] = true
grafana['admin_password'] = '5iveL!fe'
grafana['disable_login_form'] = false
grafana['env'] = {
  'GF_AUTH_ANONYMOUS_ENABLED' => true,
  'GF_SERVER_ROOT_URL' => "{{ external_url }}/-/grafana"
}
# grafana['allow_user_sign_up'] = true

grafana['dashboards'] = [
  {
    'name' => 'GitLab Omnibus',
    'orgId' => 1,
    'folder' => 'GitLab Omnibus',
    'type' => 'file',
    'disableDeletion' => true,
    'updateIntervalSeconds' => 600,
    'options' => {
      'path' => '/opt/gitlab/embedded/service/grafana-dashboards',
    }
  },
  {
    'name' => 'GitLab Quality',
    'orgId' => 1,
    'folder' => 'GitLab Quality',
    'type' => 'file',
    'disableDeletion' => true,
    'updateIntervalSeconds' => 600,
    'options' => {
      'path' => '/opt/gitlab-quality/dashboards',
    }
  }
]

consul['enable'] = true
consul['configuration'] = {
  retry_join: %w({{ consul_internal_ips | join(' ') }}),
  bind_addr: '{{ ansible_default_ipv4.address }}'
}
consul['monitoring_service_discovery'] =  true

node_exporter['listen_address'] = '0.0.0.0:9100'

nginx['status']['options'] = {
  "server_tokens" => "off",
  "access_log" => "off",
  "allow" => "{{ monitor_ip }}",
  "deny" => "all",
}

# Disable all other services
gitlab_rails['auto_migrate'] = false
alertmanager['enable'] = false
gitaly['enable'] = false
gitlab_exporter['enable'] = false
gitlab_workhorse['enable'] = false
nginx['enable'] = true
postgres_exporter['enable'] = false
postgresql['enable'] = false
redis['enable'] = false
redis_exporter['enable'] = false
sidekiq['enable'] = false
unicorn['enable'] = false
puma['enable'] = false